<div class="p-6 bg-gray-100 min-h-screen flex flex-col gap-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
    <h2 class="text-3xl font-bold text-gray-800 flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-rose-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M12 8c-2.21 0-4 1.79-4 4m8 0c0-2.21-1.79-4-4-4m0 8v4m0-4a4 4 0 004-4m-4 4a4 4 0 01-4-4" />
      </svg>
      Quản lý phí phạt
    </h2>
     <a
      href="<%=currentPath%>/add"
      class="inline-flex items-center gap-2 bg-gradient-to-r from-green-500 to-emerald-600 text-white px-5 py-2.5 rounded-xl shadow-md hover:shadow-lg hover:from-green-600 hover:to-emerald-700 transition duration-200 font-medium"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Thêm phiếu phạt
    </a>
  </div>

  <%- include('../errorMessageWithQuery') %>
  <%- include('../successMessageWithQuery') %>

  <!-- Form tìm kiếm -->
  <form
    id="search-form"
    class="bg-white shadow-sm rounded-2xl p-5 flex flex-col lg:flex-row items-center justify-between gap-4 border border-gray-200"
  >
    <div class="relative flex-1 w-full">
      <input
        name="q"
        type="text"
        placeholder="Tìm kiếm phí phạt..."
        value="<%= query.q || '' %>"
        class="w-full border border-gray-300 rounded-xl pl-10 pr-4 py-2.5 text-gray-700 focus:ring-2 focus:ring-rose-500 focus:border-rose-500 transition"
      />
      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-400 absolute left-3 top-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M21 21l-4.35-4.35M10 18a8 8 0 100-16 8 8 0 000 16z" />
      </svg>
    </div>

    <select
      class="border border-gray-300 rounded-xl px-4 py-2.5 w-full lg:w-auto focus:ring-2 focus:ring-rose-500 transition"
      name="sort"
      id="sort"
    >
      <option value="">-- Sắp xếp phí phạt --</option>
      <option value="title-asc" <%= query.sort === 'title-asc' ? 'selected' : '' %>>Tên A-Z</option>
      <option value="title-desc" <%= query.sort === 'title-desc' ? 'selected' : '' %>>Tên Z-A</option>
      <option value="createdAt-desc" <%= query.sort === 'createdAt-desc' ? 'selected' : '' %>>Mới nhất</option>
      <option value="createdAt-asc" <%= query.sort === 'createdAt-asc' ? 'selected' : '' %>>Cũ nhất</option>
      <option value="is_paid-desc" <%= query.sort === 'is_paid-desc' ? 'selected' : '' %>>Chưa thanh toán</option>
      <option value="is_paid-asc" <%= query.sort === 'is_paid-asc' ? 'selected' : '' %>>Đã thanh toán</option>
    </select>

    <button
      class="bg-gradient-to-r from-rose-600 to-pink-600 hover:from-rose-700 hover:to-pink-700 text-white px-6 py-2.5 rounded-xl shadow-md hover:shadow-lg transition duration-200 font-medium w-full lg:w-auto"
    >
      Tìm kiếm
    </button>
  </form>

  <!-- Bảng dữ liệu -->
  <div class="overflow-x-auto bg-white shadow-md rounded-2xl border border-gray-200">
    <table class="min-w-full divide-y divide-gray-200 text-gray-700">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">#</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Số tiền phạt</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Trạng thái sách</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Thanh toán</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Người mượn</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Sách</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Ngày quá hạn</th>
          <th class="px-6 py-3 text-left text-xs font-semibold uppercase tracking-wide text-gray-600">Lý do</th>
          <th class="px-6 py-3 text-center text-xs font-semibold uppercase tracking-wide text-gray-600">Hành động</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-100">
        <% fines.forEach((fine, index) => { %>
        <tr class="hover:bg-rose-50 transition duration-150">
          <td class="px-6 py-4"><%= ++index %></td>
          <td class="px-6 py-4 font-medium text-gray-800"><%= formatVND(fine.amount) %> đ</td>
          <td class="px-6 py-4">
            <span class="px-3 py-1 rounded-full text-sm font-semibold bg-indigo-100 text-indigo-700">
              <%= constantsReverse[fine.borrowDetail.status] %>
            </span>
          </td>
          <td class="px-6 py-4">
            <% if (fine.is_paid) { %>
              <span class="px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-700">Đã thanh toán</span>
            <% } else { %>
              <span class="px-3 py-1 rounded-full text-sm font-semibold bg-red-100 text-red-700">Chưa thanh toán</span>
            <% } %>
          </td>
          <td class="px-6 py-4 text-gray-700"><%= fine.borrowDetail.borrow.borrower.fullname %></td>
          <td class="px-6 py-4 text-gray-700"><%= fine.borrowDetail.book.title %></td>
          <td class="px-6 py-4 text-gray-700"><%= fine.borrowDetail.borrow.due_date ? new Date(fine.borrowDetail.borrow.due_date).toLocaleDateString() : '' %></td>
          <td class="px-6 py-4 text-gray-700"><%= fine.note %></td>
          <td class="px-6 py-4 text-center">
            <div class="flex flex-wrap justify-center gap-2">
              <% if (!fine.is_paid) { %>
                <a href="fines/mark-as-paid/<%= fine.id %>"
                  class="bg-blue-100 text-blue-700 px-3 py-1.5 rounded-lg hover:bg-blue-200 transition text-sm font-medium">
                  Đánh dấu đã thanh toán
                </a>
              <% } %>
              <a href="/fines/detail/<%= fine.id %>"
                class="bg-green-100 text-green-700 px-3 py-1.5 rounded-lg hover:bg-green-200 transition text-sm font-medium">
                Chi tiết
              </a>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="mt-4 flex justify-center">
    <%- include('../partials/pagination', { totals, page, query }) %>
  </div>
</div>

<script src="/js/dispatchSelectForm.js"></script>
<script>
  dispatchSelectForm('#search-form', '#sort');
</script>
