<div class="flex justify-center items-center gap-6 mb-5">
  <% const prevDisabled = page <= 1; %>
  <% const nextDisabled = page >= totals; %>

  <!-- Nút trang trước -->
  <a
    href="<%= !prevDisabled ? `?page=${parseInt(page) - 1}&sort=${query.sort || ''}&q=${query.q || ''}` : '#' %>"
    class="flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200
           <%= prevDisabled 
              ? 'bg-gray-300 text-gray-500 cursor-not-allowed' 
              : 'bg-blue-600 text-white hover:bg-blue-700 shadow-sm hover:shadow-md' %>"
  >
    <i class="ri-arrow-left-line"></i>
    Trang trước
  </a>

  <!-- Hiển thị số trang -->
  <p class="text-gray-700 font-semibold bg-gray-100 px-4 py-2 rounded-lg shadow-inner">
    Trang <span class="text-blue-600"><%= page %></span> / <%= totals %>
  </p>

  <!-- Nút trang sau -->
  <a
    href="<%= !nextDisabled ? `?page=${parseInt(page) + 1}&sort=${query.sort || ''}&q=${query.q || ''}` : '#' %>"
    class="flex items-center gap-2 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200
           <%= nextDisabled 
              ? 'bg-gray-300 text-gray-500 cursor-not-allowed' 
              : 'bg-blue-600 text-white hover:bg-blue-700 shadow-sm hover:shadow-md' %>"
  >
    Trang sau
    <i class="ri-arrow-right-line"></i>
  </a>
</div>
