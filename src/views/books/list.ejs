<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title || 'Danh sách sách' %></title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body class="bg-gray-50">
    <main class="max-w-6xl mx-auto py-8 px-4">
      <!-- Carousel: featuredBooks -->
      <section class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Sách nổi bật</h2>
        <div id="book-carousel" class="overflow-hidden relative">
          <div
            id="book-carousel-track"
            class="flex space-x-4 transition-transform duration-500"
          >
            <% (featuredBooks || []).forEach(function(book){ %>
            <a
              href="/books/<%= book.slug %>"
              class="w-48 flex-shrink-0 bg-white rounded shadow p-2"
            >
              <img
                src="<%= book.image_cover || 'https://picsum.photos/200/280' %>"
                alt="<%= book.title %>"
                class="w-full h-60 object-cover rounded"
              />
              <h3 class="text-sm font-medium mt-2 truncate">
                <%= book.title %>
              </h3>
            </a>
            <% }) %>
          </div>
        </div>
      </section>

      <!-- Books grid with pagination -->
      <section>
        <div class="flex items-center justify-between">
          <h2 class="text-2xl font-semibold mb-4">Tất cả sách</h2>
          <form method="get"  class="w-full sm:w-80">
            <div class="relative">
              <input
                name="q"
                value="<%= query.q %>"
                type="search"
                placeholder="Tìm sách..."
                class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-200"
              />
              <svg
                class="w-5 h-5 absolute left-3 top-2.5 text-gray-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-4.35-4.35M11 19a8 8 0 100-16 8 8 0 000 16z"
                />
              </svg>
            </div>
          </form>
        </div>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6 py-4">
          <% (books || []).forEach(function(book){ %>
          <div class="bg-white rounded shadow p-3">
            <a href="/books/<%= book.slug %>">
              <img
                src="<%= book.image_cover || 'https://picsum.photos/300/400' %>"
                alt="<%= book.title %>"
                class="w-full h-64 object-cover rounded"
              />
            </a>
            <h3 class="mt-2 font-semibold truncate">
              <a href="/books/<%= book.slug %>"> <%= book.title %> </a>
            </h3>
            <p class="text-sm text-gray-600 truncate">
              <%= book.authors?.map(a=> a.name).join(', ') || 'Không rõ tác giả'
              %>
            </p>
          </div>
          <% }) %>
        </div>

        <!-- Pagination controls -->
        <!-- Phân trang -->
        <div class="mt-4 flex justify-center">
          <%- include('../partials/pagination', { totals, page, query }) %>
        </div>
      </section>
    </main>

    <script src="/js/bookCarousel.js"></script>
  </body>
</html>
