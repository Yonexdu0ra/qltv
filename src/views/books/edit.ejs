<script>
  const image_cover = document.getElementById("image_cover");
  const preview_image = document.getElementById("preview_image");

  image_cover.addEventListener("change", function () {
    const file = this.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onload = e => preview_image.src = e.target.result;
      reader.readAsDataURL(file);
    }
  });
</script>

<!-- Script load t√°c gi·∫£ & th·ªÉ lo·∫°i -->
<script>
  const authorsSelected = <%- JSON.stringify(book.authors || []) %>;
  useChoice("#authors", "/authors/search", (data) => {
    const unique = [...new Map([...authorsSelected, ...data.data].map(i => [i.id, i])).values()];
    return unique.map(a => ({
      value: a.id,
      label: a.name,
      selected: authorsSelected.some(sel => sel.id === a.id)
    }));
  });

  const genresSelected = <%- JSON.stringify(book.genres || []) %>;
  useChoice("#genres", "/genres/search", (data) => {
    const unique = [...new Map([...genresSelected, ...data.data].map(i => [i.id, i])).values()];
    return unique.map(g => ({
      value: g.id,
      label: g.name,
      selected: genresSelected.some(sel => sel.id === g.id)
    }));
  });
</script>
