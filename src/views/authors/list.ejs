<div class="max-w-6xl mx-auto px-12 py-8 bg-white shadow-xl rounded-2xl mt-8 border border-gray-100">
	<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
		<h1 class="text-3xl font-bold text-gray-800">Danh sách tác giả</h1>

		<form method="get" action="/authors" class="w-full sm:w-80">
			<div class="relative">
				<input
					name="q"
					value="<%= query && query.q ? query.q : '' %>"
					type="search"
					placeholder="Tìm tên tác giả..."
					class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-200"
				/>
				<svg class="w-5 h-5 absolute left-3 top-2.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M11 19a8 8 0 100-16 8 8 0 000 16z" />
				</svg>
			</div>
		</form>
	</div>

	<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
		<% (authors || []).forEach(function(author){ %>
			<div class="group bg-white border border-gray-100 rounded-2xl shadow-sm p-5 hover:shadow-lg transition flex gap-4 items-start">
				<!-- Avatar initials -->
				<div class="flex-shrink-0">
					<div class="w-16 h-16 rounded-full bg-indigo-50 text-indigo-700 flex items-center justify-center text-xl font-semibold">
						<%= (author.name || 'A').split(' ').map(s=>s[0]).slice(0,2).join('').toUpperCase() %>
					</div>
				</div>

				<div class="flex-1">
					<div class="flex items-start justify-between gap-3">
						<div>
							<a href="/authors/<%= author.slug %>" class="text-lg font-semibold text-gray-800 hover:text-indigo-600"><%= author.name %></a>
							<p class="text-sm text-gray-500 mt-1"><%= (author.books && author.books.length) ? (author.books.length + ' sách') : '' %></p>
						</div>
						<div class="opacity-0 group-hover:opacity-100 transition">
							<a href="/authors/<%= author.slug %>" class="inline-flex items-center gap-2 px-3 py-1.5 bg-indigo-600 text-white text-sm rounded-full">Xem</a>
						</div>
					</div>

					<p class="text-gray-600 text-sm leading-relaxed mt-3 line-clamp-4"><%= author.bio || 'Chưa có tiểu sử' %></p>
				</div>
			</div>
		<% }) %>
	</div>

	<div class="mt-6">
		<%- include('../partials/pagination', { totals, page, query }) %>
	</div>
</div>