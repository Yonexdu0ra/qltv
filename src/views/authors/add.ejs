<div class="max-w-lg mx-auto p-6">
  <h1 class="text-xl font-semibold mb-4">Thêm tác giả</h1>
  <%- include('../error') %>
  <form action="/author/add" method="POST" class="space-y-3">
    <input
      type="text"
      name="name"
      placeholder="Tên tác giả"
      required
      class="w-full border rounded px-3 py-2"
      value="<%= author ? author.name : '' %>"
    />
    <button class="bg-green-600 text-white px-4 py-2 rounded">Lưu</button>
    <a href="/authors" class="text-gray-600 hover:underline ml-3">Quay lại</a>
  </form>
</div>
