<!-- Tiêu đề -->
<div class="bg-white shadow p-6 mb-6">
  <h1 class="text-2xl font-bold text-gray-800">
    Chi tiết phiếu mượn #<%= borrow.id %>
  </h1>
  <p class="text-gray-500 mt-1">
    Trạng thái:
    <span
      class="px-2 py-1 rounded text-sm font-medium <%= borrow.status === 'BORROWED' ? 'bg-blue-100 text-blue-700' : borrow.status === 'RETURNED' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700' %>"
    >
      <%= constantsReverse[borrow.status] %>
    </span>
  </p>
</div>

<div class="max-w-5xl mx-auto space-y-8">
  <!-- Thông tin người mượn -->
  <div class="bg-white shadow-md rounded-2xl p-6">
    <h2 class="text-lg font-semibold text-gray-700 mb-4">
      Thông tin người mượn
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-600">
      <p>
        <span class="font-medium text-gray-800">Họ tên:</span> <%=
        borrow.borrower.fullname %>
      </p>
      <p>
        <span class="font-medium text-gray-800">Email:</span> <%=
        borrow.borrower.email %>
      </p>
      <p>
        <span class="font-medium text-gray-800">SĐT:</span> <%=
        borrow.borrower.phone %>
      </p>
      <p>
        <span class="font-medium text-gray-800">Địa chỉ:</span> <%=
        borrow.borrower.address %>
      </p>
    </div>
  </div>

  <!-- Thông tin phiếu -->
  <div class="bg-white shadow-md rounded-2xl p-6">
    <h2 class="text-lg font-semibold text-gray-700 mb-4">
      Thông tin phiếu mượn
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-600">
      <p>
        <span class="font-medium text-gray-800">Ngày mượn:</span> <%= new
        Date(borrow.borrow_date).toLocaleDateString() %>
      </p>
      <p>
        <span class="font-medium text-gray-800">Hạn trả:</span> <%= new
        Date(borrow.due_date).toLocaleDateString() %>
      </p>
      <p>
        <span class="font-medium text-gray-800">Ngày lấy sách:</span>
        <%= borrow.pickup_date ? new
        Date(borrow.pickup_date).toLocaleDateString() : 'Chưa lấy' %>
      </p>
      <p>
        <span class="font-medium text-gray-800">Ngày trả:</span>
        <%= borrow.return_date ? new
        Date(borrow.return_date).toLocaleDateString() : 'Chưa trả' %>
      </p>
      
    </div>
  </div>

  <!-- Danh sách sách -->
  <div class="bg-white shadow-md rounded-2xl p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">
        Danh sách sách mượn
      </h2>
      <div>
        <a href="/fines/mark-as-fines/add/<%= borrow.books.map(book => book.BorrowDetail.id) %>" class="bg-red-100 text-red-700 px-2 py-1 rounded text-sm text-center font-medium">Phạt tất cả</a>
        <a href="/borrow-detail/mark-as-returned/<%= borrow.books.map(book => book.BorrowDetail.id) %>" class="bg-green-100 text-green-700 px-2 py-1 rounded text-sm text-center font-medium">Đã trả tất cả</a>
      </div>
    </div>

    <div class="overflow-x-auto">
      <table class="w-full border-collapse">
        <thead class="bg-gray-100 text-gray-700">
          <tr>
            <th class="p-3 text-left">#</th>
            <th class="p-3 text-left">Ảnh</th>
            <th class="p-3 text-left">Tên sách</th>
            <th class="p-3 text-left">Năm XB</th>
            <th class="p-3 text-left">ISBN</th>
            <th class="p-3 text-left">Trạng thái sách</th>
            <th class="p-3 text-left">Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% borrow.books.forEach((book, index) => { %>
          <tr class="border-b hover:bg-gray-50 transition">
            <td class="p-3"><%= index + 1 %></td>
            <td class="p-3">
              <img
                src="<%= book.image_cover %>"
                alt="cover"
                class="w-12 h-16 object-cover rounded-md shadow"
              />
            </td>
            <td class="p-3 font-medium text-gray-800"><%= book.title %></td>
            <td class="p-3 text-gray-600"><%= book.published_year %></td>
            <td class="p-3 text-gray-600"><%= book.isbn %></td>
            <td class="p-3">
              <span
                class="px-2 py-1 rounded text-sm font-medium <%= book.BorrowDetail.status === 'BORROWED' ? 'bg-blue-100 text-blue-700' : book.BorrowDetail.status === 'RETURNED' ? 'bg-green-100 text-green-700' : book.BorrowDetail.status === 'DAMAGED' ? 'bg-yellow-100 text-yellow-700' : 'bg-red-100 text-red-700' %>"
              >
                <%= constantsReverse[book.BorrowDetail.status] %>
              </span>
            </td>
            <td class="p-3 flex flex-col gap-2">
              <a
                href="/fines/add/<%= book.BorrowDetail.id %>"
                class="text-red-700 bg-red-100 px-2 py-1 rounded text-sm text-center font-medium"
                >Phạt</a
              >
              <a
                href="/borrow-details/mark-as-returned/<%= book.BorrowDetail.id %>"
                class="text-green-700 bg-green-100 px-2 py-1 rounded text-sm text-center font-medium"
                >Đã trả</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
