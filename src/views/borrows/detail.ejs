<div class="p-6 bg-gray-100 min-h-screen flex flex-col gap-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
    <h2 class="text-3xl font-bold text-gray-800 flex items-center gap-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-indigo-600" fill="none" viewBox="0 0 24 24"
        stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M5.121 17.804A13.937 13.937 0 0112 15c2.5 0 4.847.655 6.879 1.804M12 12a5 5 0 100-10 5 5 0 000 10z" />
      </svg>
      Chi tiết phiếu mượn #<%= borrow.id %>

    </h2>
    <p class="text-gray-500 mt-1">
      Trạng thái:
      <span
        class="px-2 py-1 rounded text-sm font-medium <%= borrow.status === 'BORROWED' ? 'bg-blue-100 text-blue-700' : borrow.status === 'RETURNED' ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700' %>">
        <%= constantsReverse[borrow.status] %>
      </span>
    </p>
    <a href="<%= user.role === "Reader" ? "/dashboard/borrows/reader" : "/dashboard/borrows" %>"
      class="inline-flex items-center gap-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white px-5 py-2.5 rounded-xl shadow-md hover:shadow-lg hover:from-blue-700 hover:to-indigo-700 transition duration-200 font-medium">
      Quay lại
    </a>
  </div>

  <div class=" space-y-8">
    <div class="bg-white shadow-md rounded-2xl p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-600">
        <div class="bg-white shadow-md rounded-2xl border border-gray-200 p-8 space-y-6">
          <h2 class="text-lg font-semibold text-gray-700 mb-4">
            Thông tin người mượn
          </h2>
          <div class="grid sm:grid-cols-2 gap-6">
            <!-- Họ tên -->
            <div>
              <p class="text-sm text-gray-500 mb-1">Họ và tên</p>
              <p
                class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 font-medium text-gray-800 cursor-default">
                <%= borrow.borrower.fullname %>
              </p>
            </div>
            <!-- Email -->
            <div>
              <p class="text-sm text-gray-500 mb-1">Email</p>
              <p
                class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 font-medium text-gray-800 cursor-default">
                <%= borrow.borrower.email %>
              </p>
            </div>
            <!-- SĐT -->
            <div>
              <p class="text-sm text-gray-500 mb-1">SĐT</p>
              <p
                class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 font-medium text-gray-800 cursor-default">
                <%= borrow.borrower.phone %>
              </p>
            </div>
            <!-- Địa chỉ -->
            <div>
              <p class="text-sm text-gray-500 mb-1">Địa chỉ</p>
              <p
                class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 font-medium text-gray-800 cursor-default">
                <%= borrow.borrower.address %>
              </p>
            </div>
          </div>
        </div>
        
      <!-- </div> -->
        <div class="bg-white shadow-md rounded-2xl border border-gray-200 p-8 space-y-6">
          <h2 class="text-lg font-semibold text-gray-700 mb-4">
            Thông tin phiếu mượn
          </h2>
          <div class="grid sm:grid-cols-2 gap-6">
          <!-- Họ tên -->
          <div>
            <p class="text-sm text-gray-500 mb-1">Ngày mượn</p>
            <p
              class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 font-medium text-gray-800 cursor-default">
              <%= new Date(borrow.borrow_date).toLocaleDateString() %>
            </p>
          </div>
          <!-- Email -->
          <div>
            <p class="text-sm text-gray-500 mb-1">Hạn trả</p>
            <p
              class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 font-medium text-gray-800 cursor-default">
              <%= new Date(borrow.due_date).toLocaleDateString() %>
            </p>
          </div>
          <!-- SĐT -->
          <div>
            <p class="text-sm text-gray-500 mb-1">Ngày lấy sách</p>
            <p
              class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 font-medium text-gray-800 cursor-default">
              <%= borrow.pickup_date ? new Date(borrow.pickup_date).toLocaleDateString() : 'Chưa lấy' %>
            </p>
          </div>
          <!-- Địa chỉ -->
          <div>
            <p class="text-sm text-gray-500 mb-1">Ngày trả</p>
            <p
              class="w-full bg-gray-50 border border-gray-200 rounded-lg px-4 py-2 font-medium text-gray-800 cursor-default">
              <%= borrow.return_date ? new Date(borrow.return_date).toLocaleDateString() : 'Chưa trả' %>
            </p>
          </div>
        </div>
      </div>
      </div>
    </div>
   
  </div>
  <!-- Danh sách sách -->
  <div class="bg-white shadow-md rounded-2xl p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-semibold text-gray-700 mb-4">
        Danh sách sách mượn
      </h2>
      <% if((user.role==='Admin' || user.role==='Librarian') && ['BORROWED', 'EXPIRED'].includes(borrow.status)) { %>
        <div>
          <a href="/dashboard/fines/add?b=<%= borrow.id %>&bd=<%= borrow.borrowDetails.map(borrowDetail => borrowDetail.id).join(',') %>"
            class="bg-red-100 text-red-700 px-2 py-1 rounded text-sm text-center font-medium">Phạt tất cả</a>
          <a href="/dashboard/borrows/mark-as-returned/<%= borrow.id %>"
            class="bg-green-100 text-green-700 px-2 py-1 rounded text-sm text-center font-medium">Đã trả tất cả</a>
        </div>
        <% } %>
    </div>

    <div class="overflow-x-auto">
      <table class="w-full border-collapse">
        <thead class="bg-gray-100 text-gray-700">
          <tr>
            <th class="p-3 text-left">#</th>
            <th class="p-3 text-left">Ảnh</th>
            <th class="p-3 text-left">Tên sách</th>
            <th class="p-3 text-left">Năm XB</th>
            <th class="p-3 text-left">ISBN</th>
            <th class="p-3 text-left">Trạng thái sách</th>
            <th class="p-3 text-left">Hành động</th>
          </tr>
        </thead>
        <tbody>
          <% borrow.borrowDetails.forEach((borrowDetail, index)=> { %>
            <tr class="border-b hover:bg-gray-50 transition">
              <td class="p-3">
                <%= index + 1 %>
              </td>
              <td class="p-3">
                <img src="<%= borrowDetail.book.image_cover %>" alt="cover"
                  class="w-12 h-16 object-cover rounded-md shadow" />
              </td>
              <td class="p-3 font-medium text-gray-800">
                <%= borrowDetail.book.title %>
              </td>
              <td class="p-3 text-gray-600">
                <%= borrowDetail.book.published_year %>
              </td>
              <td class="p-3 text-gray-600">
                <%= borrowDetail.book.isbn %>
              </td>
              <td class="p-3">
                <span>
                  <%= constantsReverse[borrowDetail.status] %>
                </span>
              </td>
              <td class="p-3 flex flex-col gap-2">
                <% if(user.role==='Admin' || user.role==='Librarian' ) { %>
                  <% if(["BORROWED", "EXPIRED" ].includes(borrowDetail.status)) { %>
                    <a href="/dashboard/fines/add?b=<%= borrow.id %>&bd=<%= borrowDetail.id %>"
                      class="text-red-700 bg-red-100 px-2 py-1 rounded text-sm text-center font-medium">Phạt</a>
                    <% } %>
                      <% if (["BORROWED", "EXPIRED" , "DAMAGED" , "LOSTED" ].includes(borrowDetail.status)) { %>
                        <a href="/dashboard/borrow-details/mark-as-returned/<%= borrowDetail.id %>"
                          class="text-green-700 bg-green-100 px-2 py-1 rounded text-sm text-center font-medium">Đã
                          trả</a>
                        <% } %>
                          <% } %>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>