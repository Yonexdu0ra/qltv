<div class="max-w-lg mx-auto p-6">
  <h1 class="text-xl font-semibold mb-4">Cập nhật thông tin</h1>
  <%- include('../error') %>
  <form  method="POST" class="space-y-3">
    
    <div class="flex flex-col gap-2">
        <label for="fullname">Họ tên</label>
        <input type="text" id="fullname" name="fullname" placeholder="Nhập họ tên" required class="w-full border rounded px-3 py-2" value="<%= user ? user.fullname : '' %>"/>
    </div>
    <div class="flex flex-col gap-2">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" placeholder="Nhập email" required class="w-full border rounded px-3 py-2" value="<%= user ? user.email : '' %>"/>
    </div>
    <div class="flex flex-col gap-2">
        <label for="address">Địa chỉ</label>
        <input type="text" id="address" name="address" placeholder="Nhập địa chỉ" required class="w-full border rounded px-3 py-2" value="<%= user ? user.address : '' %>"/>
    </div>
    <div class="flex flex-col gap-2">
        <label for="phone">Số điện thoại</label>
        <input type="text" id="phone" name="phone" placeholder="Nhập số điện thoại" required class="w-full border rounded px-3 py-2" value="<%= user ? user.phone : '' %>"/>
    </div>
    

    <button class="bg-green-600 text-white px-4 py-2 rounded">Lưu</button>
    <a href="/users" class="text-gray-600 hover:underline ml-3">Quay lại</a>
  </form>
</div>
