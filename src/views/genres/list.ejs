<div class="max-w-6xl mx-auto px-12 py-8 bg-white shadow-xl rounded-2xl mt-8 border border-gray-100">
	<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4">
		<h1 class="text-3xl font-bold text-gray-800">Thể loại</h1>

		<form method="get" action="/genres" class="w-full sm:w-80">
			<div class="relative">
				<input
					name="q"
					value="<%= query && query.q ? query.q : '' %>"
					type="search"
					placeholder="Tìm thể loại..."
					class="w-full pl-10 pr-4 py-2 border border-gray-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-200"
				/>
				<svg class="w-5 h-5 absolute left-3 top-2.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M11 19a8 8 0 100-16 8 8 0 000 16z" />
				</svg>
			</div>
		</form>
	</div>

	<% if (genres && genres.length > 0) { %>
		<div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
			<% genres.forEach(function(genre){ %>
				<a href="/genres/<%= genre.slug %>" class="block bg-indigo-50 hover:bg-indigo-100 transition rounded-lg p-4 text-center border border-indigo-100 shadow-sm">
					<h3 class="font-semibold text-indigo-700"><%= genre.name %></h3>
					<% if (genre.description) { %>
						<p class="text-sm text-indigo-600 mt-1 line-clamp-2"><%= genre.description %></p>
					<% } %>
				</a>
			<% }) %>
		</div>
	<% } else { %>
		<div class="p-8 text-center text-gray-500">Chưa có thể loại nào.</div>
	<% } %>

	<div class="mt-6">
		<%- include('../partials/pagination', { totals, page, query }) %>
	</div>
</div>